<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#F0F3F8"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_task_info"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/task_on_icon"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="15dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/day_task_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:textSize="16sp"
            android:textColor="@color/font_color_day"
            android:textFontWeight="500"
            android:layout_marginTop="7dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/date_task_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_task_info"
            android:textColor="@color/font_color_date"
            android:textSize="13sp"
            android:textFontWeight="500"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>